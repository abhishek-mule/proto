{
  "name": "PayChain - Blockchain Payment App",
  "short_name": "PayChain",
  "description": "Secure blockchain payment platform with offline capabilities and real-time transaction tracking",
  "start_url": "/?source=pwa",
  "id": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#f8fafc",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["finance", "productivity", "utilities", "blockchain"],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "icons": [
    {
      "src": "/icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/maskable-icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile dashboard view"
    },
    {
      "src": "/screenshots/mobile-wallet.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile wallet view"
    },
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop dashboard view"
    }
  ],
  "shortcuts": [
    {
      "name": "Send Payment",
      "short_name": "Send",
      "description": "Send cryptocurrency payment",
      "url": "/send?source=shortcut",
      "icons": [
        {
          "src": "/icons/send-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Transaction History",
      "short_name": "History",
      "description": "View transaction history",
      "url": "/history?source=shortcut",
      "icons": [
        {
          "src": "/icons/history-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Wallet Balance",
      "short_name": "Balance",
      "description": "Check wallet balance",
      "url": "/balance?source=shortcut",
      "icons": [
        {
          "src": "/icons/balance-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Scan QR Code",
      "short_name": "Scan",
      "description": "Scan QR code for payment",
      "url": "/scan?source=shortcut",
      "icons": [
        {
          "src": "/icons/scan-shortcut.png",
          "sizes": "96x96"
        }
      ],
      "enctype": "application/x-www-form-urlencoded"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/open-transaction",
      "accept": {
        "application/json": [".transaction"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+paychain",
      "url": "/protocol?url=%s"
    }
  ]
}